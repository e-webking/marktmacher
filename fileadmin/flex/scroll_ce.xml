<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
  <meta type="array">
    <langDisable>1</langDisable>
  </meta>
  <ROOT type="array">
    <type>array</type>
    <el type="array">
      <field_slide type="array">
        <TCEforms type="array">
          <label>Image (240px)</label>
          <config type="array">
            <type>group</type>
            <internal_type>file</internal_type>
            <allowed>gif,png,jpg,jpeg</allowed>
            <max_size>500</max_size>
            <uploadfolder>uploads/tx_armtemplate</uploadfolder>
            <show_thumbs>1</show_thumbs>
            <size>1</size>
            <maxitems>1</maxitems>
            <minitems>0</minitems>
          </config>
        </TCEforms>
      </field_slide>
      <field_imgalt type="array">
        <TCEforms type="array">
          <label>Image Alt text</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_imgalt>
      <field_link type="array">
        <TCEforms type="array">
          <label>Link</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
            <wizards type="array">
                <link type="array">
                    <type>popup</type>
                    <title>Link</title>
                    <icon>link_popup.gif</icon>
                    <module type="array">
                        <name>wizard_element_browser</name>
                        <urlParameters type="array">
                            <mode>wizard</mode>
                        </urlParameters>
                    </module>
                    <JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
                </link>
            </wizards>
            <softref>typolink</softref>
          </config>
        </TCEforms>
      </field_link>
    </el>
  </ROOT>
</T3DataStructure>